extends layout

block content
  h1= player_name
  p Welcome to #[em Game History.] 
    | This page contains all the data of the games played by the player
  br
  h1= title
  br
  if error
    p Error getting dynamic content.
  else
    p #[strong Total Game Played:] !{game_played}

    each val in game_list
        li= "game_id: " + val.dataValues.game_id + ", player_id: " + val.dataValues.player_id + ", stake: " + val.dataValues.stake + ", gain: " + val.dataValues.gain
    br
    h4
      a(href='/home/player/detail/' + player_name) Player Status
